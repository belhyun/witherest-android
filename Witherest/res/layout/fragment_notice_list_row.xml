<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/notice_noticebg"
        android:padding="3dip" >

        <RelativeLayout
            android:id="@+id/notice_contaniner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:padding="2dip" >

            <LinearLayout
                android:id="@+id/notice_row_image_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="5dip"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/notice_row_image"
                    android:layout_width="55dip"
                    android:layout_height="55dip"
                    android:layout_gravity="clip_vertical"
                    android:gravity="center"
                    android:src="@drawable/notice_profileimg_bg" />
            </LinearLayout>

            <TextView
                android:id="@+id/notice_textview1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/notice_row_image_container"
                android:layout_toRightOf="@id/notice_row_image_container"
                android:maxLines="1"
                android:text="morceaux 님이 영어 공부합시다!"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/check_textview2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notice_textview1"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@id/notice_row_image_container"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="방에 참여를 하였습니다."
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/check_textview3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_textview2"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@id/notice_row_image_container"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="15분전"
                android:textColor="#999999"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>